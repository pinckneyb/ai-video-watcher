modules = ["web", "python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["cairo", "ffmpeg", "ffmpeg-full", "freetype", "ghostscript", "glibcLocales", "gobject-introspection", "gtk3", "lcms2", "libGL", "libGLU", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "openjpeg", "pkg-config", "qhull", "tcl", "tk", "zlib"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "AI Video Analysis Suite"

[[workflows.workflow]]
name = "AI Video Analysis Suite"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run launcher.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 43983
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
run = ["streamlit", "run", "app.py", "--server.port=5000", "--server.address=0.0.0.0"]
