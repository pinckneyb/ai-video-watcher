modules = ["web", "python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["cairo", "ffmpeg", "ffmpeg-full", "fontconfig", "freetype", "ghostscript", "glib", "glibcLocales", "gobject-introspection", "gtk3", "harfbuzz", "lcms2", "libGL", "libGLU", "libimagequant", "libjpeg", "libsndfile", "libtiff", "libwebp", "libxcrypt", "openjpeg", "pango", "pkg-config", "qhull", "tcl", "tk", "zlib"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "AI Video Analysis Suite"

[[workflows.workflow]]
name = "AI Video Analysis Suite"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run surgical-vop-assessment/surgical_vop_app.py"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "vm"
run = ["streamlit", "run", "surgical-vop-assessment/app.py", "--server.port=5000", "--server.address=0.0.0.0"]
build = ["pip", "install", "--no-cache-dir", "streamlit==1.49.1", "opencv-python-headless==4.8.1.78", "pillow==10.4.0", "numpy==1.24.4", "requests==2.31.0", "python-dotenv==1.0.1", "openai==1.0.0", "reportlab==4.0.9", "matplotlib==3.7.5", "fpdf2==2.7.9"]
